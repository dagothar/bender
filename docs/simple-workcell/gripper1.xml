<!-- w tym pliku opisujemy chwytak -->

<TreeDevice name="chwytak1">

	<!-- baza -->
	<Frame name="baza" type="Fixed">
		<RPY>0 0 0</RPY>
		<Pos>0 0 0</Pos>
	</Frame>

	<!-- lewy palec -->
	<Joint name="lewy" type="Prismatic">
		<RPY>0 -90 0</RPY>
		<Pos>0 0 0.05</Pos>
	</Joint>
	
	<Frame name="TCPlewy" refframe="lewy" type="EndEffector">
	</Frame>

	<!-- prawy palec -->
	<Joint name="prawy" refframe="baza" type="Prismatic">
		<RPY>0 -90 0</RPY>
		<Pos>0 0 0.05</Pos>
		<Depend on="lewy" gain="-1" offset="0"/>
	</Joint>
	
	<Frame name="TCPprawy" refframe="prawy" type="EndEffector">
	</Frame>

	<!-- limity -->
	<PosLimit refjoint="lewy" min="0" max="0.05"/>
	<VelLimit refjoint="lewy" max="0.1"/>

	<!-- grafiki -->
	<Drawable name="bazaGeo" refframe="baza">
		<RPY>0 0 0</RPY>
		<Pos>0 0 0.025</Pos>
		<Box x="0.15" y="0.1" z="0.05"/>
	</Drawable>
	
	<Drawable name="lewyGeo" refframe="lewy">
		<RPY>0 0 0</RPY>
		<Pos>0.05 0 0.01</Pos>
		<Box x="0.1" y="0.025" z="0.02"/>
	</Drawable>

	<Drawable name="prawyGeo" refframe="prawy">
		<RPY>0 0 0</RPY>
		<Pos>0.05 0 -0.01</Pos>
		<Box x="0.1" y="0.025" z="0.02"/>
	</Drawable>

	<!-- ustawienia kolizji -->
	<CollisionSetup file ="gripper.prox.xml"/>
	
	<Q name="Home">0.05</Q>
	
</TreeDevice>

