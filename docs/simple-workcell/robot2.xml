<!-- W tym pliku opisujemy strukture urzadzenia (robota) -->

<SerialDevice name="robot2">
	<!-- definiujemy uklad odniesienia bazy -->
	<Frame name="baza" type="Fixed">
		<!-- polozenie -->
		<RPY>0 0 0</RPY>
		<Pos>0 0 0</Pos>
		
		<!-- grafika -->
		<Drawable name="bazaGeo" refframe="baza">
			<!-- polozenie grafiki wzgledem ukladu -->
			<RPY>0 0 0</RPY>
			<Pos>0 0 0</Pos>
			
			<!-- grafika -->
			<Cylinder radius="0.05" z="0.2"/>
		</Drawable>
	</Frame>
	
	<!-- pierwszy czlon -->
	<Joint name="czlon1" type="Revolute">
		<!-- polozenie -->
		<RPY>0 0 0</RPY>
		<Pos>0 0 0.1</Pos>
		
		<!-- limity pozycji, predkosci, przyspieszenia -->
		<PosLimit refjoint="czlon1" min="-360" max="360"/>
		<VelLimit refjoint="czlon1" max="60"/>
		<AccLimit refjoint="czlon1" max="120"/>
		
		<!-- grafika -->
		<Drawable name="czlon1Geo1" refframe="czlon1">
			<!-- polozenie grafiki wzgledem ukladu -->
			<RPY>0 0 -90</RPY>
			<Pos>0 0 0</Pos>
			
			<!-- grafika -->
			<Cylinder radius="0.06" z="0.1"/>
		</Drawable>
		
		<Drawable name="czlon1Geo2" refframe="czlon1">
			<!-- polozenie grafiki wzgledem ukladu -->
			<RPY>0 0 0</RPY>
			<Pos>0 0 -0.05</Pos>
			
			<!-- grafika -->
			<Box x="0.12" y="0.1" z="0.1"/>
		</Drawable>
	</Joint>
	
	<!-- 2. czlon (ramie 1.) -->
	<Joint name="czlon2" type="Revolute">
		<!-- polozenie -->
		<RPY>0 180 -90</RPY>
		<Pos>0 0 0</Pos>
		
		<!-- limity pozycji, predkosci, przyspieszenia -->
		<PosLimit refjoint="czlon2" min="0" max="180"/>
		<VelLimit refjoint="czlon2" max="60"/>
		<AccLimit refjoint="czlon2" max="120"/>
		
		<!-- grafika -->
		<Drawable name="czlon2Geo" refframe="czlon2">
			<!-- polozenie grafiki wzgledem ukladu -->
			<RPY>0 -90 0</RPY>
			<Pos>0.25 0 0</Pos>
			
			<!-- grafika -->
			<Cylinder radius="0.05" z="0.5"/>
		</Drawable>
		
		<Drawable name="czlon2Geo1" refframe="czlon2">
			<!-- polozenie grafiki wzgledem ukladu -->
			<RPY>0 0 0</RPY>
			<Pos>0.5 0 0</Pos>
			
			<!-- grafika -->
			<Cylinder radius="0.06" z="0.1"/>
		</Drawable>
	</Joint>
	
	<!-- 3. czlon -->
	<Joint name="czlon3" type="Revolute">
		<!-- polozenie -->
		<RPY>0 0 0</RPY>
		<Pos>0.5 0 0</Pos>
		
		<!-- limity pozycji, predkosci, przyspieszenia -->
		<PosLimit refjoint="czlon3" min="-180" max="180"/>
		<VelLimit refjoint="czlon3" max="60"/>
		<AccLimit refjoint="czlon3" max="120"/>
		
		<!-- grafika -->
		<Drawable name="czlon3Geo" refframe="czlon3">
			<!-- polozenie grafiki wzgledem ukladu -->
			<RPY>0 -90 0</RPY>
			<Pos>0.25 0 0</Pos>
			
			<!-- grafika -->
			<Cylinder radius="0.05" z="0.5"/>
		</Drawable>
		
		<Drawable name="czlon3Geo1" refframe="czlon3">
			<!-- polozenie grafiki wzgledem ukladu -->
			<RPY>0 0 0</RPY>
			<Pos>0.5 0 0</Pos>
			
			<!-- grafika -->
			<Cylinder radius="0.06" z="0.1"/>
		</Drawable>
	</Joint>
	
	<Joint name="czlon4" type="Revolute">
		<!-- polozenie -->
		<RPY>0 0 0</RPY>
		<Pos>0.5 0 0</Pos>
		
		<!-- limity pozycji, predkosci, przyspieszenia -->
		<PosLimit refjoint="czlon4" min="-180" max="180"/>
		<VelLimit refjoint="czlon4" max="60"/>
		<AccLimit refjoint="czlon4" max="120"/>
		
		<!-- grafika -->
		<Drawable name="czlon4Geo" refframe="czlon4">
			<!-- polozenie grafiki wzgledem ukladu -->
			<RPY>0 -90 0</RPY>
			<Pos>0.25 0 0</Pos>
			
			<!-- grafika -->
			<Cylinder radius="0.05" z="0.5"/>
		</Drawable>
	</Joint>
	
	<Joint name="czlon5" type="Revolute">
		<!-- polozenie -->
		<RPY>0 90 0</RPY>
		<Pos>0.55 0 0</Pos>
		
		<!-- limity pozycji, predkosci, przyspieszenia -->
		<PosLimit refjoint="czlon5" min="-360" max="360"/>
		<VelLimit refjoint="czlon5" max="60"/>
		<AccLimit refjoint="czlon5" max="120"/>
		
		<!-- grafika -->
		<Drawable name="czlon5Geo" refframe="czlon5">
			<!-- polozenie grafiki wzgledem ukladu -->
			<RPY>0 0 0</RPY>
			<Pos>0 0 -0.025</Pos>
			
			<!-- grafika -->
			<Cylinder radius="0.06" z="0.05"/>
		</Drawable>
	</Joint>
	
	<!-- ustawienia wykluczania kolizji -->
	<CollisionSetup file="robot.prox.xml"/>
	
	<Q name="Home">0.79 0.79 1.57 -1.57 0</Q>
	
</SerialDevice>
