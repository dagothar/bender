<!-- W tym pliku znajduje sie ogolny opis sceny -->

<WorkCell name="simple">
	<!-- stol -->
	<Frame name="table" refframe="WORLD">
		<!-- polozenie ukladu odniesienia : RollPitchYaw i pozycja w XYZ -->
		<RPY>0 0 0</RPY>
		<Pos>0 0 0</Pos>
		
		<!-- reprezentacja graficzna -->
		<Drawable name="tableGeo" refframe="table">
			<!-- polozenie grafiki wzgledem ukladu odniesienia -->
			<RPY>0 0 0</RPY>
			<Pos>0 0 -0.05</Pos>
			
			<!-- pudelko -->
			<Box x="1.0" y="2.5" z="0.1"/> 
		</Drawable>
	</Frame>
	
	<!-- obiekt -->
	<Frame name="obiekt" refframe="WORLD" type="Movable">
		<!-- polozenie ukladu odniesienia : RollPitchYaw i pozycja w XYZ -->
		<RPY>0 0 0</RPY>
		<Pos>0 0 1</Pos>
		
		<!-- reprezentacja graficzna -->
		<Drawable name="obiektGeo" refframe="obiekt">
			<!-- polozenie grafiki wzgledem ukladu odniesienia -->
			<RPY>0 0 0</RPY>
			<Pos>0 0 0</Pos>
			
			<!-- pudelko -->
			<Box x="0.1" y="0.5" z="0.05"/> 
		</Drawable>
	</Frame>
	
	<!-- 1. robot -->
	<Frame name="robot1" refframe="WORLD">
		<!-- polozenie ukladu odniesienia : RollPitchYaw i pozycja w XYZ -->
		<RPY>0 0 0</RPY>
		<Pos>0 -1 0</Pos>
	</Frame>
	<!-- dolaczamy plik XML z opisem robota 1.: -->
	<Include file="robot1.xml"/>
	
	<!-- 1. chwytak -->
	<Frame name="chwytak1" refframe="robot1.czlon5">
		<RPY>0 0 0</RPY>
		<Pos>0 0 0</Pos>
	</Frame>
	
	<Include file ="gripper1.xml"/>
	
	<!-- 2. robot -->
	<Frame name="robot2" refframe="WORLD">
		<!-- polozenie ukladu odniesienia : RollPitchYaw i pozycja w XYZ -->
		<RPY>0 0 0</RPY>
		<Pos>0 1 0</Pos>
	</Frame>
	<!-- dolaczamy plik XML z opisem robota 2.: -->
	<Include file="robot2.xml"/>
	
	<!-- 2. chwytak -->
	<Frame name="chwytak2" refframe="robot2.czlon5">
		<RPY>0 0 0</RPY>
		<Pos>0 0 0</Pos>
	</Frame>
	
	<Include file ="gripper2.xml"/>
	
	<!-- ustawienia kolizji -->
	<CollisionSetup file="SceneCollisionSetup.xml"/>
</WorkCell>
